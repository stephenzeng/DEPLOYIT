<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>DEPLOYIT</title>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-fixed-top site-header">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("DEPLOYIT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav pull-right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="contentContainer">
            <div class="container body-content">
                @Html.Partial("_MessagePanel")
                <h3 class="page-header">@ViewBag.Title</h3>
                @RenderBody()
            </div>
        </div>
        <footer>
        </footer>
        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/signalR")
        <script type="text/javascript" src="~/signalr/hubs"></script>
        @RenderSection("scripts", required: false)

    </body>
</html>
